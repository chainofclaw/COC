# COC Block Explorer (Next.js 15)
FROM node:22-slim AS deps
WORKDIR /app
COPY explorer/package.json explorer/package-lock.json* ./
RUN npm install

FROM node:22-slim AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY explorer/ ./

# Next.js bakes NEXT_PUBLIC_* vars into the client bundle at build time
ARG NEXT_PUBLIC_RPC_URL=http://127.0.0.1:18780
ARG NEXT_PUBLIC_WS_URL=ws://127.0.0.1:18781
ENV NEXT_PUBLIC_RPC_URL=${NEXT_PUBLIC_RPC_URL}
ENV NEXT_PUBLIC_WS_URL=${NEXT_PUBLIC_WS_URL}
ENV NEXT_TELEMETRY_DISABLED=1

# Ensure public dir exists for standalone output
RUN mkdir -p public
RUN npm run build

FROM node:22-slim AS runtime
WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends curl && rm -rf /var/lib/apt/lists/*

COPY --from=builder /app/.next/standalone ./
COPY --from=builder /app/.next/static ./.next/static
COPY --from=builder /app/public ./public

ENV PORT=3000
ENV HOSTNAME=0.0.0.0
EXPOSE 3000

HEALTHCHECK --interval=15s --timeout=5s --start-period=20s --retries=3 \
  CMD curl -sf http://localhost:3000 || exit 1

CMD ["node", "server.js"]
